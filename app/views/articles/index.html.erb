<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
      <%= link_to article_path(article) do %>
        <div class="col-xs-12 col-sm-6">
          <div class="card">
            <div class="card-picture" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTdXqxj7yu5jz6bMr7oEesrjv_3v-aRkfvJYjKyQD4txYng75SM9w');">
            <div class="card-body">
              <h1><%= article.title %></h1>
              <p><%= article.subtitle %></p>
              <div class="icons">
                <a href="#"><i class="fa fa-star"></i></a></li>
                <a href="#"><i class="fa fa-heart"></i></a></li>
                <a href="#"><i class="fa fa-share"></i></a></li>
              </div>
            </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

